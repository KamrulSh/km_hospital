<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="doctor_tree" model="ir.ui.view">
        <field name="name">kmhospital.doctor.tree</field>
        <field name="model">kmhospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="address"/>
                <field name="college"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="status"/>
                <field name="age"/>
                <field name="joined_from"/>  
               
                
                
            </tree>
        </field>
    </record>

    <record id="doctor_form" model="ir.ui.view">
        <field name="name">kmhospital.doctor.form</field>
        <field name="model">kmhospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="gender"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="address"/>
                            <field name="college"/>
                           
                            <field name="status"/>
                            <field name="age"/>
                            <field name="joined_from"/>  
                            
                        </group>
                        
                        <notebook>
                      <page string="About">
                          <field name='description'/>
                      </page>
                      
                      
                     </notebook>
                          
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="doctor_search" model="ir.ui.view">
        <field name="name">kmhospital.doctor.search</field>
        <field name="model">kmhospital.doctor</field>
        <field name="arch" type="xml">
            <search string="Doctor">
                <field name="name"/>    
                <field name="email"/>
                <field name="status"/>
                <field name="gender"/>
                <field name="phone"/>   
                <field name="age"/>     
                <field name="college"/>   
                            
                
            </search>
            </field>
    </record>
    
    
    <record id="doctor_action" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kmhospital.doctor</field>
        <field name="view_mode">tree,form,search,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Doctors List
            </p>
        </field>
    </record>

    <record id="doctor_kanban" model="ir.ui.view">
        <field name="name">kmhospital.doctor.kanban</field>
        <field name="model">kmhospital.doctor</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <field name="name"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="status"/>
                <field name="college"/> 

                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_real_estate_kanban">
                            <div class="oe_kanban_details">
                                <h1 class="o_kanban_record_title"><field name="name"/></h1>
                                <ul>
                                    
                                    <li>Gender : <field name="gender"/></li>
                                    <li>Phone : <field name="phone"/></li>
                                    <li>Email : <field name="email"/></li>
                                    
                                    <li>College : <field name="college"/></li>
                                    <li>Status : <field name="status"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    
    
    
    <menuitem id="hospital_root"
            name="KM Hospital" />


    

    <menuitem id="hospital_doctor"
        name="Doctors"
        parent="hospital_root"
        action="doctor_action" />



</odoo>