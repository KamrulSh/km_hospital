<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="patient_tree" model="ir.ui.view">
        <field name="name">kmhospital.patient.tree</field>
        <field name="model">kmhospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="address"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="status"/>
                <field name="age"/>
               
                
                
            </tree>
        </field>
    </record>

    <record id="patient_form" model="ir.ui.view">
        <field name="name">kmhospital.patient.form</field>
        <field name="model">kmhospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            
                            <field name="email"/>
                            <field name="status"/>
                            <field name="age"/>
                            
                        </group>
                        
                        <notebook>
                      <page string="About">
                          <field name='description'/>
                      </page>
                      <page string="Problems">
                          <field name='problems'/>
                      </page>
                      
                     </notebook>
                          
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="patient_search" model="ir.ui.view">
        <field name="name">kmhospital.patient.search</field>
        <field name="model">kmhospital.patient</field>
        <field name="arch" type="xml">
            <search string="Patients">
                <field name="name"/>    
                <field name="gender"/>
                <field name="phone"/>   
                <field name="age"/>                     
                
            </search>
            </field>
    </record>
    
    
    <record id="patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kmhospital.patient</field>
        <field name="view_mode">tree,form,search</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Patients List
            </p>
        </field>
    </record>

    
    
    
    <menuitem id="hospital_root"
            name="KM Hospital" />

    

    <menuitem id="hospital_patient"
        name="Patients"
        parent="hospital_root"
        action="patient_action" />



</odoo>